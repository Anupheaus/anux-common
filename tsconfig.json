{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "removeComments": true,
    "module": "amd",
    "outFile": "./dist/index.js",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "target": "esnext",
    "sourceMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.tests.ts",
  ]
}